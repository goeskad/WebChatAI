<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat demo</title>
    <script>
        function formatKbsQuestions(kbsQuestions) {
            if (kbsQuestions.length > 0) {
                const queries = JSON.parse(kbsQuestions).queries;
                let formatText = "";
                for (let i = 0; i < queries.length; i++) {
                    const query = queries[i].query;
                    formatText += "问题" + i + ":" + query + "\n";
                }
            
                return "将为您从知识库中查询以下问题: \n" + formatText + "请稍后";
            } else {
                return "您的问题无需查询知识库，将直接由chatGPT为您回答，请稍后";
            }
        }
        
        async function handleSubmit(event) {
            event.preventDefault();
            const input = document.querySelector('input[name="input"]').value;
            const resultDiv = document.getElementById('results');
            const submitBtn = document.getElementById('submitBtn');
            
            // 禁用提交按钮
            submitBtn.disabled = true;
            
            // 第一次查询
            const firstResponse = await fetch('/getKbsQuestions', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ input })
            });
            const firstResult = await firstResponse.text();
            resultDiv.innerHTML = `<pre>AI assistant: ${formatKbsQuestions(firstResult)}</pre>`;

            // 第二次查询
            const secondResponse = await fetch('/chat', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ input, kbsQueries: firstResult })
            });
            const secondResult = await secondResponse.text();
            resultDiv.innerHTML += `<pre>AI assistant: ${secondResult}</pre>`;
            
            // 启用提交按钮
            submitBtn.disabled = false;
        }
    </script>
</head>
<body>
    <h1>Chat with AI</h1>
    <form onsubmit="handleSubmit(event)">
        Please enter your question: <input type="text" name="input" placeholder="Enter your input" required>
        <button id="submitBtn" type="submit">Submit</button>
    </form>
    <div id="results">
    </div>
</body>
</html>